<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_pos_validation_by_document" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pos_validation_by_document</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='default_sales_tax_setting']" position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="pos_identify_client"/>
                        <div class="text-muted">
                            Identify customer from
                        </div>
                        <field name="pos_identify_client"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>