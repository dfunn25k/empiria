<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="DeliveryOrderWidget" owl="1">
		<div role="dialog" class="modal-dialog">
			<Draggable>
				<div class="popup popup-confirm" style="min-height: 90%; max-height=95%; overflow: hidden; min-width: 40% !important;">
					<header class="title drag-handle">
						<t t-esc="props.title"/>
					</header>
					<main class="body">
						<div>
							<ul class="tabs">
								<li class="tab">
									<input type="radio" name="tabs" checked="checked" id="tab1" />
									<label for="tab1" style="margin-left: 40px; margin-right: 5px; font-size: 15px;">Address </label>
									<div id="tab-content1" class="content">
										<h5 id="default">By Default Shipped to Selected Customer Address</h5>
										<div class="form-group" id="form1">  
											<input id="apply_shipping_address" class="pos_shipping_address" type="checkbox" />
											<label for="pos_shipping_address">Ship to Different Address</label>
										</div>
										<div style="margin-top: 20px;">
											<div id="delivery_date" class="alert" style="color: #FF0000; font-size: 14px; text-align: left;">
												<span class="closebtn"></span>  
												Please fill your details delivery date properly.
											</div>
											<div id="street" class="alert" style="color: #FF0000; font-size: 15px; text-align: left;">
												<span class="closebtn"></span>  
												Please fill your street details properly.
											</div>
											<div id="zip" class="alert" style="color: #FF0000; font-size: 15px; text-align: left;">
												<span class="closebtn"></span>  
												Please fill your zip details properly.
											</div>
											<div id="mobile" class="alert" style="color: #FF0000; font-size: 15px; text-align: left;">
												<span class="closebtn"></span>  
												Please fill your mobile details properly
											</div>
											<div id="d_name" class="alert" style="color: #FF0000; font-size: 15px; text-align: left;">
												<span class="closebtn"></span>  
												Please fill your name details properly.
											</div>
											<div id="city" class="alert" style="color: #FF0000; font-size: 15px; text-align: left;">
												<span class="closebtn"></span>  
												Please fill your city details properly.'
											</div>
											<div id="address" class="alert" style="color: #FF0000; font-size: 15px; text-align: left;">
												<span class="closebtn"></span>  
												Please fill your address details properly.
											</div>
										</div>
										<div style="margin-top: 20px; position: fixed;"> 
											<div class='delivery-detail required-field'>
												<span class='label' style="min-width: 95px; margin-top: 10px;">Name</span>
												<input autocomplete="off" class='detail d_name' name='d_name' t-att-value='name || ""' required="1" style="color: #4A4F59; font-size: 15px;"></input>
											</div>
											<div class='delivery-detail required-field'>
												<span class='label' style="min-width: 95px; margin-top: 10px;">Mobile</span>
												<input autocomplete="off" type='text' class='detail d_mobile' name='mobile' t-att-value='mobile || ""' pattern='[0-9]' title='Only enter integer value' required="1" style="color: #000; font-size: 15px;"></input>
											</div>
											<div class='delivery-detail'>
												<span class='label' style="min-width: 95px; margin-top: 10px;">Email</span>
												<input autocomplete="off" type='email' class='detail d_email' name='email' t-att-value='email || ""' style="color: #4A4F59; font-size: 15px;"></input>
											</div>
											<div class='delivery-detail required-field'>
												<span class='label' style="min-width: 95px; margin-top: 10px;">Locality</span>
												<input autocomplete="off" class='detail d_location' name='address' t-att-value=' address || ""' required="1" style="color: #4A4F59; font-size: 15px;"></input>
											</div>
											<div class='delivery-detail required-field'>
												<span class='label' style="min-width: 95px; margin-top: 10px;">Street</span>
												<input autocomplete="off" class='detail d_street' name='street' t-att-value=' street || ""' required="required" style="color: #4A4F59; font-size: 15px;"></input>
											</div>
											<div class='delivery-detail'>
												<span class='label' style="min-width: 95px; margin-top: 10px;">City</span>
												<input autocomplete="off" class='detail d_city' name='city' t-att-value='city || ""' required="required" style="color: #4A4F59; font-size: 15px;"></input>
											</div>
											<div class='delivery-detail required-field'>
												<span class='label' style="min-width: 95px; margin-top: 10px;">Zip</span>
												<input autocomplete="off" type='text' class='detail d_zip' name='zip' t-att-value='zip || ""' pattern='[0-9]' required="required" style="color: #4A4F59; font-size: 15px;"></input>
											</div>
										</div>
									</div>
								</li>
								<li class="tab">
									<input type="radio" name="tabs" id="tab2"/>
									<label for="tab2" style="font-size: 15px;">Other Info</label>   
									<div id="tab-content2" class="content" style="min-width:81%; padding-bottom: 5px !important;">
										<div style="margin-top: 10px;">
											<div id="delivery_person" class="alert" style="color: #FF0000; font-size: 15px; text-align: left;">
												<span class="closebtn"></span>  
												Please Select Delivery Person.
											</div>
											<div id="dd_date" class="alert" style="color: #FF0000; font-size: 15px; text-align: left;">
												<span class="closebtn"></span>  
												Please Select Delivery Date.
											</div>
										</div>
										<div class='delivery-detail2 required-field' required="required" style="margin: 15px 0 0 5px;">
											<span class='label' style="padding: 10px; margin-left: -14px;">Delivery person</span>
											<select class="detail person_id" name='person_id' required="required">
												<option class="s_small" value=''>Set Delivery Person</option>
												<t t-foreach='env.pos.users_total_by_id' t-as="person" t-key="person.id">
													<option t-att-value='person.id' t-att-selected='person_id == person.id or None'> 
														<t t-esc='person.name'/>
													</option>
												</t>
											</select>
										</div>
										<div class='delivery-note' style="margin-top:16px;">
											<textarea rows="4" cols="50" class="detail order_note" name='order_note' placeholder='Add a Order Note...' t-att-value='order_note || ""' style="color: #4A4F59; font-size: 15px;"></textarea>
										</div>
										<div class='delivery-detail2 required-field' style="margin-top:16px">
											<div class="form-group" style="position:relative; display:inline;">
												<div class='input-group date' id='dell_date'>
													<input id="my_date" type='text' name='delivery_date' class="form-control detail" t-att-value='delivery_date || ""' required="required"/>
													<span class="input-group-addon">
														<span class="fa fa-calendar"></span>
													</span>
												</div>
											</div>
										</div>
									</div>
								</li>
							</ul>
						</div>
					</main>
					<footer class="footer" style="bottom: 0; position: absolute;">
						<div class="button confirm highlight" t-on-click="create">
							<t t-esc="props.confirmText" />
						</div>
						<div class="button cancel" t-on-click="clear">
							<t t-esc="props.clearText" />
						</div>
						<div class="button cancel" t-on-click="cancel">
							<t t-esc="props.cancelText" />
						</div>
					</footer>
				</div>
			</Draggable>
		</div>
	</t>
</templates>