<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_form_view_inherit_autocreate_pos_invoice" model="ir.ui.view">
        <field name="name">res.config.settings.form.view.inherit.autocreate_pos_invoice</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='auto_printing']" position="after">
                <div id="pos_ticket_user_id" class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="pos_ticket_user_id"/>
                        <div class="text-muted">
                            Set this user in the POS order if it is empty
                        </div>
                        <div class="content-group mt16">
                            <field name="pos_ticket_user_id"/>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box" id="pos_always_move_account">
                    <div class="o_setting_left_pane">
                        <field name="pos_always_move_account"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="pos_always_move_account"/>
                        <div class="text-muted">
                            If this field is active, Odoo will try to generate an entry for each sale whose total amount is equal to or greater than the one set in the
                            "Amount to Bill" field and not only for invoices, in this way each sale will have its accounting entry
                        </div>
                    </div>
                </div>
                <div id="pos_invoice_journal_id" class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="pos_invoice_journal_id"/>
                        <div class="content-group mt16">
                            <field name="pos_invoice_journal_id"/>
                        </div>
                    </div>
                </div>
                <div id="pos_ticket_journal_id" class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="pos_ticket_journal_id"/>
                        <div class="content-group mt16">
                            <field name="pos_ticket_journal_id"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
