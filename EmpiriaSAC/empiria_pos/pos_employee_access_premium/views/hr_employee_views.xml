        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='identification_group']" position="inside">
                <field name="pos_access_close" widget="boolean_toggle"/>
                <field name="pos_access_delete_orderline" widget="boolean_toggle"/>
                <field name="pos_access_payment" widget="boolean_toggle"/>
                <field name="pos_access_decrease_quantity" widget="boolean_toggle"/>
                <field name="pos_access_delete_order" widget="boolean_toggle"/>
                <field name="pos_access_discount" widget="boolean_toggle"/>
                <field name="pos_access_price" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>
</odoo>
