<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_inherit_select_invoice_format_pos" model="ir.ui.view">
        <field name="name">res.config.settings.form.view.inherit.select_invoice_format_pos</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='auto_printing']" position="after">
                <div id="invoice_report_id_div" class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="pos_invoice_report_id"/>
                        <div class="content-group mt16">
                            <field name="pos_invoice_report_id"/>
                        </div>
                    </div>
                </div>
                <div id="automatic_print_electronic_invoice_div" class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="pos_automatic_print_electronic_invoice"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="pos_automatic_print_electronic_invoice"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
