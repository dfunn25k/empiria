<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit.customize_later_delivery_for_pos</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='barcode_scanner']" position="before">
                <div id="flexible_ship_later_div" class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="pos_flexible_ship_later"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="pos_flexible_ship_later"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
