<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="SelectionComboProductItem" owl="1">
        <article t-attf-class="product pos_topp_product {{highlight}}" tabindex="0" t-on-click="() => this.trigger('click-combo-product', {'product': props.product})">
            <div class="product-img">
                <img t-att-src="imageUrl" t-att-alt="props.product.display_name" />
            </div>
            <div class="product-content">
                <div class="product-name" style="font-size: 12px;" t-attf-id="article_product_{{props.product.id}}">
                    <t t-esc="props.product.display_name" />
                </div>
                <span class="price-tag" style="font-size: 12px;">
                    <t t-esc="price" />
                </span>
                <span class="remove-item" t-on-click="() => this.trigger('remove-combo-product', {'product': props.product})">
                    <i class="fa fa-times" aria-hidden="true"></i>
                </span>
            </div>
        </article>
    </t>
</templates>