<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="ProductItem" t-inherit="point_of_sale.ProductItem" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('product-content')]/div" position="after">
             <t t-if="props.product.image_128">
                 <span class="product_extra" t-if="props.product.is_selection_combo">
                     Product Combo
                 </span>
            </t>
            <t t-else="">
                <span class="product_extra1" t-if="props.product.is_selection_combo">
                    Product Combo
                </span>
            </t>
        </xpath>
    </t>
</templates>
