<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_form_view_inherit_serie_and_correlative_pos" model="ir.ui.view">
        <field name="name">res.config.settings.form.view.inherit.serie_and_correlative_pos</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="autocreate_pos_invoice.res_config_settings_form_view_inherit_autocreate_pos_invoice"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pos_invoice_journal_id']" position="inside">
                <div class="o_setting_right_pane">
                    <div class="content-group mt16">
                        <field name="pos_invoice_l10n_latam_document_type_ids">
                            <tree decoration-muted="(not active)">
                                <field name="code"/>
                                <field name="name"/>
                                <field name="doc_code_prefix"/>
                                <field name='country_id'/>
                                <field name='active' invisible="1"/>
                            </tree>
                        </field>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@id='pos_ticket_journal_id']" position="inside">
                <div class="o_setting_right_pane">
                    <div class="content-group mt16">
                        <field name="pos_ticket_l10n_latam_document_type_ids">
                            <tree decoration-muted="(not active)">
                                <field name="code"/>
                                <field name="name"/>
                                <field name="doc_code_prefix"/>
                                <field name='country_id'/>
                                <field name='active' invisible="1"/>
                            </tree>
                        </field>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
