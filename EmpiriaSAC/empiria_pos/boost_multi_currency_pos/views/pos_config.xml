<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_form_view_inherit_boost_multi_currency_pos" model="ir.ui.view">
        <field name="name">res.config.settings.form.view.inherit.boost_multi_currency_pos</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='iface_tipproduct']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="iface_multi_currency">
                    <div class="o_setting_left_pane">
                        <field name="pos_enable_multi_currency"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="pos_enable_multi_currency"/>
                        <div class="text-muted" id="multicurr_config">
                            Use To MultiCurrency For Payment
                        </div>
                        <div class="content-group mt16" attrs="{'invisible' : [('pos_enable_multi_currency', '=', False)]}">
                            <div class="row mt16">
                                <label string="Display Conversion of currencies" for="pos_display_conversion" class="col-md-3 o_light_label"/>
                                <field name="pos_display_conversion"/>
                            </div>
                            <div class="row mt16">
                                <label string="Fetch All The Active Currencies" for="pos_fetch_master" class="col-md-3 o_light_label"/>
                                <field name="pos_fetch_master"/>
                            </div>
                            <div class="row mt16" attrs="{'invisible' : [('pos_fetch_master', '=', True)]}">
                                <label string="Select currencies" for="pos_currencies_ids" class="col-md-3 o_light_label"/>
                                <field name="pos_currencies_ids" widget="many2many_tags"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    <record id="pos_order_form_view_inherit_boost_multi_currency_pos" model="ir.ui.view">
        <field name="name">pos.order.form.view.inherit.boost_multi_currency_pos</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="order_currency_id"/>
                <field name="amount_currency"/>
            </field>
            <field name="price_subtotal_incl" position="after">
                <field name="line_amount_currency"/>
            </field>
        </field>
    </record>
</odoo>