<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" >
        <xpath expr="//div[@class='pos-receipt-contact']" position="after">
            <t t-if="props.order.get_partner()">
                <t t-set="order_partner" t-value="props.order.get_partner()"/>
                <div class="receipt-user-data">
                    <span class="partner-name">Customer: <t t-esc="order_partner.name"/></span><br/>
                    <span class="partner-no">No.: <t t-esc="order_partner.vat || ''"/></span><br/>
                    <span class="partner-address">Direction: <t t-esc="order_partner.address || ''"/></span><br/>
                </div>
            </t>
        </xpath>
    </t>

</templates>
