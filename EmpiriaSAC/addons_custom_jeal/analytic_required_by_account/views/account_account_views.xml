<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <!-- Form view: añade el campo "requires_analytic" antes del grupo de cuentas -->
        <record id="view_account_form_inherit_analytic_required" model="ir.ui.view">
            <field name="name">account.account.form.inherit.analytic.required</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='accounting']/group/group/field[@name='group_id']" position="before">
                    <field name="requires_analytic"/>
                </xpath>
            </field>
        </record>

        <!-- Tree view: muestra el campo como opcional -->
        <record id="view_account_tree_inherit_analytic_required" model="ir.ui.view">
            <field name="name">account.account.tree.inherit.analytic.required</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_list"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='reconcile']" position="after">
                    <field name="requires_analytic" optional="show"/>
                </xpath>
            </field>
        </record>

        <!-- Search view: añade filtros y agrupación -->
        <record id="view_account_search_inherit_analytic_required" model="ir.ui.view">
            <field name="name">account.account.search.inherit.analytic.required</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_search"/>
            <field name="arch" type="xml">
                <!-- Filtros por valor booleano -->
                <xpath expr="//search" position="inside">
                    <separator/>
                    <filter string="Requiere cuenta analítica" name="requires_analytic" domain="[('requires_analytic', '=', True)]"/>
                    <filter string="No requiere cuenta analítica" name="not_requires_analytic" domain="[('requires_analytic', '=', False)]"/>
                </xpath>

                <!-- Filtro agrupado -->
                <xpath expr="//group/filter[@name='accounttype']" position="after">
                    <filter string="Agrupar por requisito analítico" name="groupby_requires_analytic" domain="" context="{'group_by': 'requires_analytic'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
