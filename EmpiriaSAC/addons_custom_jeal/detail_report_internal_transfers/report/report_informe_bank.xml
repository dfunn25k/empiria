                        <section class="intro">
                            <div class="container-fluid p-0">
                                <div class="row justify-content-center">
                                    <div class="col-12">
                                        <div class="table-responsive table-scroll" data-mdb-perfect-scrollbar="true" style="position: relative; height: 500px">
                                            <table class="table table-striped mb-0">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">#</th>
                                                        <th scope="col">COMPAÑIA</th>
                                                        <th scope="col">CONTACTO</th>
                                                        <th scope="col">TRANSFERENCIA</th>
                                                        <th scope="col">FECHA PREVISTA</th>
                                                        <th scope="col">DOCUMENTO ORIGEN</th>
                                                        <th scope="col">DE</th>
                                                        <th scope="col">PARA</th>
                                                        <th scope="col">ESTADO</th>
                                                        <th scope="col">PRODUCTO</th>
                                                        <th scope="col">REALIZADO</th>
                                                        <th scope="col">UdM</th>
                                                        <th scope="col">PROVEEDOR</th>
                                                        <th scope="col">PRECIO</th>
                                                        <th scope="col">MONEDA</th>
                                                        <th scope="col">FECHA</th>
                                                    </tr>
                                                </thead>

                                                <tbody>
                                                    <t t-set="i" t-value="0" />

                                                    <t t-foreach="form_data" t-as="line">
                                                        <tr style="font-size: 13px;" height="25px">
                                                            <td>
                                                            </td>

                                                            <td>
                                                                <t t-esc="line['compania']"/>
                                                            </td>

                                                            <td>
                                                                <t t-esc="line['contacto']"/>
                                                            </td>

                                                            <td>
                                                                <t t-esc="line['referencia']"/>
                                                            </td>

                                                            <td>
                                                                <t t-esc="line['fecha_prevista']"/>
                                                            </td>

                                                            <td>
                                                                <t t-esc="line['documento_origen']"/>
                                                            </td>

                                                            <td>
                                                                <t t-esc="line['ubicacion_destino']"/>
                                                            </td>

                                                            <td>
                                                                <t t-esc="line['ubicacion_origen']"/>
                                                            </td>

                                                            <td>
                                                                <t t-esc="line['estado']"/>
                                                            </td>

                                                            <td>
                                                                <t t-esc="line['producto']"/>
                                                            </td>

                                                            <td>
                                                                <t t-esc="line['realizado']"/>
                                                            </td>

                                                            <td>
                                                                <t t-esc="line['udm']"/>
                                                            </td>
                                                            
                                                            <td>
                                                                <t t-esc="line['proveedor']"/>
                                                            </td>

                                                            <td>
                                                                <t t-esc="line['precio']"/>
                                                            </td>

                                                            <td>
                                                                <t t-esc="line['moneda']"/>
                                                            </td>

                                                            <td>
                                                                <t t-esc="line['fecha']"/>
                                                            </td>
                                                        </tr>

                                                        <t t-set="i" t-value="i+1"/>
                                                    </t>

                                                    <div>
                                                        <p t-if="i == 0">
                                                            <h2>NO HAY ITEMS PARA MOSTRAR</h2>
                                                        </p>
                                                    </div>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </t>
            </t>
        </template>
