<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_sire_rce_report_custom_two_national_purchase_form" model="ir.ui.view">
            <field name="name">view.sire.rce.report.custom.two.national.purchase.form</field>
            <field name="model">sire.purchase.national.custom.two</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="company_id" invisible="1"/>
                            <field name="year"/>
                            <field name="month"/>
                            <field name="state_send"/>
                            <field name="opportunity_code"/>
                            <field name="correlative" attrs="{'invisible': [('opportunity_code', 'in', ('01', '02', '', False))], 'required': [('opportunity_code', 'in', ('03', '04'))]}"/>
                        </group>

                        <group>
                            <field name="xlsx_filename" invisible="1"/>
                            <field name="xlsx_binary" filename="xlsx_filename" readonly="1"/>

                            <field name="zip_filename" invisible="1"/>
                            <field name="zip_binary" filename="zip_filename" readonly="1"/>
                        </group>
                    </group>

                    <field name="error_dialog" class="errorbox" style="color:#FF0000;" attrs="{'invisible': [('error_dialog', '=', False)]}"/>

                    <footer>
                        <button string="Generar Reporte" name="action_generate_files" type="object" class="oe_highlight" data-hotkey="q"/>
                        <button string="Cancelar" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_sire_rce_report_custom_two_national_purchase" model="ir.actions.act_window">
            <field name="name">Reporte RCE - Compras Nacionales Personalizado Two</field>
            <field name="groups_id" eval="[(4, ref('account.group_account_invoice'))]"/>
            <field name="res_model">sire.purchase.national.custom.two</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="l10n_pe_sire_purchase_national_custom_two.view_sire_rce_report_custom_two_national_purchase_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
