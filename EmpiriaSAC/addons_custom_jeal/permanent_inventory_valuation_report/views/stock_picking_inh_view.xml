<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_picking_inh_form" model="ir.ui.view">
            <field name="name">stock.picking.inh.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                <xpath expr="//header/button" position="after">
                    <button name="add_operation_type" type="object" string="AGREGAR TIPO OPERACIÓN" class="btn-info"/>
                </xpath>

                <xpath expr="//notebook/page[@name='operations']/field/tree/field[@name='description_picking']" position="after">
                    <field name="sunat_operation_type" string="Tipo de operación" optional="hide"/>
                </xpath>

                <xpath expr="//notebook/page[@name='operations']/field/form/group/field[@name='product_id']" position="after">
                    <field name="sunat_operation_type" string="Tipo de operación"/>
                </xpath>

                <xpath expr="//notebook/page[@name='operations']" position="after">
                    <page string="Tipo de Operación" name="operation_type">
                        <field name="operation_type_ids">
                            <tree create="0" delete="0" edit="1">
                                <field name="move_id" readonly="1"/>
                                <field name="product_id" readonly="1"/>
                                <field name="sunat_operation_type" readonly="0" string="Tipo de Operación"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
