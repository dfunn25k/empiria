<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_account_account_payrolls_inherit_form" model="ir.ui.view">
            <field name="name">account.account.payrolls.inherit.form</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='accounting']" position="after">
                    <page name="payroll" string="Configuración de Nómina">
                        <group>
                            <field name="enable_analytic_entries" string="Habilitar Cuentas Analíticas en Nómina" widget="boolean_toggle"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_account_account_payrolls_inherit_tree" model="ir.ui.view">
            <field name="name">account.account.payrolls.inherit.tree</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_list"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='reconcile']" position="after">
                    <field name="enable_analytic_entries" string="Cuentas Analíticas en Nómina" widget="boolean_toggle"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
