<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_account_analytic_account_form_inherit_destination" model="ir.ui.view">
            <field name="name">account.analytic.account.form.inherit.destination</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='main']/group/field[@name='code']" position="after">
                    <field name="has_destination_account" string="Usar Cuentas de Destino" widget="boolean_toggle"/>

                    <field name="destination_account_id" 
                        string      = "Cuenta de Destino" 
                        placeholder = "Seleccione la cuenta de destino..." 
                        options     = "{'no_create_edit': True}" 
                        attrs       = "{
                            'invisible': [('has_destination_account', '=', False)],
                            'required': [('has_destination_account', '=', True)]
                        }" />
                    <field name="destination_account_counterpart_id" 
                        string      = "Cuenta de Contrapartida" 
                        placeholder = "Seleccione la cuenta de contrapartida..." 
                        options     = "{'no_create_edit': True}" 
                        attrs       = "{
                            'invisible': [('has_destination_account', '=', False)],
                            'required': [('has_destination_account', '=', True)]
                        }" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
