<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_account_form" model="ir.ui.view">
            <field name="name">account.account.view.form.inherit.l10n_pe_destination_account</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='group_id']" position="after">
                    <field name="has_destination_account" string="Usar Cuentas de Destino" widget="boolean_toggle"/>
                </xpath>

                <xpath expr="//notebook" position="inside">
                    <page name="destination_accounts" string="Distribución Contable" attrs="{'invisible': [('has_destination_account', '=', False)]}">
                        <group>
                            <field name="destination_account_counterpart_id" 
                                string      = "Cuenta de Contrapartida" 
                                colspan     = "2" 
                                placeholder = "Seleccione la cuenta de contrapartida..." 
                                options     = "{'no_open': True, 'no_create_edit': True}"/>
                        </group>

                        <h5 class="mt-3">Cuentas de Destino</h5>

                        <field name="destination_account_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="destination_account_id" string="Cuenta" placeholder="Seleccione la cuenta..." options="{'no_open': True, 'no_create_edit': True}"/>
                                <field name="percentage" string="Porcentaje" sum="Total Porcentaje" widget="percentage"/>
                                <field name="company_id" string="Compañía" optional="hide"/>
                            </tree>
                        </field>

                        <div class="oe_inline text-warning" style="margin-top: 10px;" attrs="{'invisible': [('has_destination_account', '=', False)]}">
                            <i class="fa fa-warning" role="img" aria-label="Warning"/>
                            <span style="margin-left: 5px;">
                                La suma total de los porcentajes debe ser <b>exactamente 100%</b>.
                            </span>
                        </div>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
