<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_account_analytic_line_form_inherit_group" model="ir.ui.view">
            <field name="name">account.analytic.line.form.inherit.group</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="account.view_account_analytic_line_form_inherit_account" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='general_account_id']" position="after">
                    <field name="group_id" options="{'no_create_edit': True}"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_analytic_line_tree_inherit_group" model="ir.ui.view">
            <field name="name">account.analytic.line.tree.inherit.group</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="account.view_account_analytic_line_tree_inherit_account" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='general_account_id']" position="after">
                    <field name="group_id" optional="hide"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_analytic_line_search_inherit_group" model="ir.ui.view">
            <field name="name">account.analytic.line.search.inherit.group</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="account.view_account_analytic_line_filter_inherit_account" />
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='financialaccount']" position="after">
                    <filter string="Grupo de Cuentas" name="group_account" context="{'group_by':'group_id'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
