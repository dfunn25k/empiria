<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_account_move_field_commercial_inh_form" model="ir.ui.view">
            <field name="name">view.account.move.field.commercial.inh.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='other_info']/group[@id='other_tab_group']/group[@name='sale_info_group']/field[@name='invoice_user_id']" position="after">
                    <field name="enable_external_commercial" invisible="1" />

                    <field name="external_commercial_id" 
                        string      = "Comercial" 
                        placeholder = "Ingrese el comercial" 
                        options     = "{'no_create': True, 'no_open': True}" 
                        attrs       = "{'invisible': ['|', ('move_type', 'not in', ['out_invoice', 'out_refund']), ('enable_external_commercial', '!=', True)]}" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
