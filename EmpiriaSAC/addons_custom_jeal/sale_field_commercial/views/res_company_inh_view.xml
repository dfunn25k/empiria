<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_res_company_commercial_partner_inh_form" model="ir.ui.view">
            <field name="name">view.res.company.commercial.partner.inh.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='general_info']/group/group/field[@name='currency_id']" position="after">
                    <field name="enable_external_commercial" 
                        string  = "Habilitar Comercial" 
                        widget  = "boolean_toggle" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
