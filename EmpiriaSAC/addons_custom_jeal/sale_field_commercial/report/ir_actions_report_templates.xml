<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <template id="report_saleorder_commercial_partner" name="Reporte Pedido de Venta - Comercial" inherit_id="sale.report_saleorder_document">
            <xpath expr="//div[@class='page']/div[@id='informations']/div[@t-if='doc.user_id.name']" position="replace">
                <div t-if="doc.external_commercial_id or doc.user_id" class="col-auto col-3 mw-100 mb-2" name="commercial">
                    <strong>Comercial:</strong>

                    <t t-if="doc.enable_external_commercial and doc.external_commercial_id.name">
                        <p class="m-0" t-field="doc.external_commercial_id"/>
                    </t>
                    <t t-elif="doc.user_id.name">
                        <p class="m-0" t-field="doc.user_id"/>
                    </t>
                    <t t-else="">
                    </t>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
