<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="view_ple_report_diary_form_simplified_inherit" model="ir.ui.view">
            <field name="name">ple.report.diary.form.simplified.inherit</field>
            <field name="model">ple.report.diary</field>
            <field name="inherit_id" ref="ple_diary_book.view_ple_report_diary_form" />
            <field name="arch" type="xml">
                <!-- Inserta los campos del reporte Excel simplificado antes del campo txt_filename_diary3 -->
                <xpath expr="//group/group/field[@name='txt_filename_diary3']" position="before">
                    <!-- Campo oculto con el nombre del archivo -->
                    <field name="simplified_xls_filename" invisible="1"/>
                    <!-- Campo binario visible con el archivo Excel simplificado -->
                    <field name="simplified_xls_binary" filename="simplified_xls_filename" readonly="1" string="Reporte Excel - Diario Simplificado" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>