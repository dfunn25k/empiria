<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="extra_company_venezuela_setting" model="ir.ui.view">
            <field name="name">Extra company Venezuela setting</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='default_taxes_setting_container']" position="after">
                    <h2 groups="l10n_pe_account_reten.group_retention_operador">Retenciones</h2>

                    <div class="row mt16 o_settings_container" groups="l10n_pe_account_reten.group_retention_operador">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_retention" widget="upgrade_boolean"/>
                            </div>

                            <div class="o_setting_right_pane">
                                <label for="is_retention" string="Habilitar Retención"/>
                                <div class="text-muted">
                                </div>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" groups="l10n_pe_account_reten.group_retention_operador" attrs="{'invisible': [('is_retention', '=', False)]}">
                            <div class="o_setting_right_pane">
                                <label for="percentage_retention" string="Retención IVA"/>
                                <div class="text-muted">
                                    % de retención
                                </div>
                            </div>

                            <div class="o_setting_right_pane">
                                <field name="percentage_retention" widget="float"/>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" groups="l10n_pe_account_reten.group_retention_operador" attrs="{'invisible': [('is_retention', '=', False)]}">
                            <div class="o_setting_right_pane">
                                <label for="amount_minimum_retention" string="Monto Mínimo para Retención"/>
                                <div class="text-muted">
                                    Monto Mínimo Aplicado a la Retención
                                </div>
                            </div>

                            <div class="o_setting_right_pane">
                                <field name="amount_minimum_retention" widget="float"/>
                            </div>
                        </div>

                        <div class="col-12 col-lg-6 o_setting_box" groups="l10n_pe_account_reten.group_retention_operador" attrs="{'invisible': [('is_retention', '=', False)]}">
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label for="journal_retention_id" class="col-lg-3 o_light_label"/>
                                        <field name="journal_retention_id" options="{'no_edit': True, 'no_create': True, 'no_open': False}"/>
                                    </div>

                                    <div class="row mt16">
                                        <label for="account_retention_id" class="col-lg-3 o_light_label"/>
                                        <field name="account_retention_id" options="{'no_edit': True, 'no_create': True, 'no_open': False}"/>
                                    </div>

                                    <div class="row mt16">
                                        <label for="document_type_retention_id" class="col-lg-3 o_light_label"/>
                                        <field name="document_type_retention_id" options="{'no_edit': True, 'no_create': True, 'no_open': False}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
