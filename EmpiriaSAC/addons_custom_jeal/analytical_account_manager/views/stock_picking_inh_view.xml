<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">
        <record id="stock_picking_form_inh" model="ir.ui.view">
            <field name="name">stock.picking.form.inh</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button" position="after">
                    <button name="button_add_analytic_account" type="object" string="AGREGAR CUENTA ANALITICA" class="btn-info" confirm="Está seguro de modificar las cuentas analíticas?" attrs="{'invisible': [('is_analytic_account', '!=', True)]}"/>
                </xpath>

                <xpath expr="//sheet/group/group/field[@name='origin']" position="after">
                    <field name="is_analytic_account" invisible="1" />

                    <field name="analytic_plan_id" attrs="{'invisible': [('is_analytic_account', '!=', True)]}"/>

                    <label for="analytic_account_id" attrs="{'invisible': [('is_analytic_account', '!=', True)]}"></label>
                    <div class="o_row" attrs="{'invisible': [('is_analytic_account', '!=', True)]}">
                        <field name="analytic_account_id"/>
                        <button name="button_add" type="object" string="AGREGAR" class="btn-info"/>
                    </div>
                </xpath>

                <xpath expr="//page[@name='operations']" position="after">
                    <page string="Cuentas Analíticas" name="analytic_account" attrs="{'invisible': [('is_analytic_account', '!=', True)]}">
                        <field name="stock_move_line_nosuggest_ids" attrs="{'invisible': [('show_reserved', '=', False)]}" context="{'tree_view_ref': 'analytical_account_manager.view_stock_move_line_detailed_operation_inh_tree', 'default_picking_id': id, 'default_location_id': location_id, 'default_location_dest_id': location_dest_id, 'default_company_id': company_id}"/>

                        <field name="stock_move_line_ids_without_package" attrs="{'invisible': [('show_reserved', '=', True)]}" context="{'tree_view_ref': 'analytical_account_manager.view_stock_move_line_detailed_operation_inh_tree', 'default_picking_id': id, 'default_location_id': location_id, 'default_location_dest_id': location_dest_id, 'default_company_id': company_id}"/>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
