                    <field name="move_id" invisible="1"/>
                    <field name="state" invisible="1"/>

                    <!-- <field name="product_id" required="1" context="{'default_detailed_type': 'product'}" attrs="{'readonly': ['|', ('state', '=', 'done'), ('move_id', '!=', False)]}"/> -->
                    <field name="product_id" readonly="1"/>
                    <field name="analytic_plan_id" attrs="{'readonly': [('is_analytic_account', '=', False)]}" />
                    <field name="analytic_id" attrs="{'readonly': [('is_analytic_account', '=', False)]}" />
                </tree>
            </field>
        </record>
    </data>

