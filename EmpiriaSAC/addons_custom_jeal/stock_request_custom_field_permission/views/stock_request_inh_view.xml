<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data noupdate="0">
    <record id="view_stock_request_inh_form" model="ir.ui.view">
      <field name="name">view.stock.request.inh.form</field>
      <field name="model">stock.request</field>
      <field name="inherit_id" ref="stock_request.view_stock_request_form" />
      <field name="arch" type="xml">
        <xpath expr="//sheet/group" position="after">
          <group colspan="4">
            <!-- Campo editable visible solo para el grupo 'group_edit_comment_stock_request' -->
            <field name="comment_editable" string="Comentario" placeholder="Escribe un comentario" colspan="4" nolabel="1" widget="text" decoration-bf="1" decoration-it="1" decoration-info="1" groups="stock_request_custom_field_permission.group_edit_comment_stock_request"/>

            <!-- Campo de solo lectura visible solo para el grupo 'group_view_comment_stock_request' -->
            <field name="comment_readonly" string="Comentario" placeholder="Comentario" colspan="4" nolabel="1" widget="text" decoration-bf="1" decoration-it="1" decoration-info="1" groups="stock_request_custom_field_permission.group_view_comment_stock_request"/>
          </group>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
